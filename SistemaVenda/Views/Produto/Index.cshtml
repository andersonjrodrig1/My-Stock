@model IEnumerable<SistemaVenda.Models.ProdutoViewModel>;

@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Valor</th>
            <th>Categoria</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Codigo</td>
                <td>@item.Descricao</td>
                <td>@item.Quantidade</td>
                <td>@item.Valor</td>
                <td></td>
                <td><a asp-action="Cadastro" asp-route-id="@item.Codigo">Editar</a></td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="Cadastro">
    <input class="btn btn-block btn-primary" type="submit" value="Cadastrar Produto" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
